{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": "src",
    "paths": {
      "@components/*": ["components/*"],
      "@modules/*": ["modules/*"],
      "@screens/*": ["screens/*"],
      "@assets/*": ["assets/*"],
      "@styles/*": ["assets/styles/*"],
      "@icons/*": ["assets/icons/*"],
      "@images/*": ["assets/images/*"],
      "@views/*": ["views/*"],
      "@utils/*": ["utils/*"],
      "@hooks/*": ["utils/hooks/*"],
      "@redux/*": ["utils/redux/*"],
      "@mytypes/*": ["utils/types/*"],
      "@helpers/*": ["utils/helpers/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "src/views/Button/__test__/Button.test.tsx"],
  "exclude": ["node_modules"]
}
